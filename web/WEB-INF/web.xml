        <servlet-name>CourseScheduleServlet</servlet-name>
        <servlet-class>xyz.antsgroup.course.controller.teacher.CourseScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseScheduleServlet</servlet-name>
        <url-pattern>/teacher/course/schedule</url-pattern>
    </servlet-mapping>

